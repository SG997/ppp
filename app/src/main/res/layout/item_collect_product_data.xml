<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/allThreeField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/importImage"
        >

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם המוצר"/>

        <EditText
            android:id="@+id/productExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הסבר על המוצר"/>

        <EditText
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סכום בש״ח"/>

    </LinearLayout>


    <ImageButton
        android:id="@+id/importImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:hint="תמונה של המוצר"
        android:src="@drawable/import_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/allThreeField" />

    <Button
        android:id="@+id/confirmProduct"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:text="אישור"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/allThreeField"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>