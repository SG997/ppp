<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/bankAccountCard"
        android:layout_width="170dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/gradient_yellow_white" />

    <ImageView
        android:id="@+id/bankAccountCardIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/chip_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/bankAccountCard"
        app:layout_constraintLeft_toLeftOf="@+id/bankAccountCard" />

    <TextView
        android:id="@+id/creditCardDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textDirection="rtl"
        android:text="8678687  855  12"
        app:layout_constraintTop_toBottomOf="@+id/bankAccountCardIcon"
        app:layout_constraintRight_toRightOf="@+id/bankAccountCard"
        app:layout_constraintLeft_toLeftOf="@+id/bankAccountCard"
        app:layout_constraintBottom_toBottomOf="@+id/bankAccountCard" />

    <ImageView
        android:id="@+id/editIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_icon"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/bankAccountCard"
        app:layout_constraintRight_toLeftOf="@+id/bankAccountCard"
        app:layout_constraintBottom_toBottomOf="@+id/bankAccountCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ערוך/מחק"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/editIcon"
        app:layout_constraintRight_toLeftOf="@+id/editIcon"
        app:layout_constraintBottom_toBottomOf="@+id/editIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>